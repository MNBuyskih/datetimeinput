.datetime-wrapper
  display inline-block
  position relative
  .datetime-input
    position relative
    z-index 2
    width auto
    border none
    padding 0
    text-align center
    font-family Arial, sans-serif
    font-size 12px
    cursor default
    opacity 1
    &:focus
      //opacity 0
      outline none
      + .datetime-buffer
        opacity 1

  .datetime-buffer
    cursor default
    position absolute
    z-index 1
    text-align center
    opacity 0
    color #fff
    background #0A78FF